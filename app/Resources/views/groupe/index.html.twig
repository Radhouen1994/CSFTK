{% extends 'admin.html.twig' %}

{% block body %}
    <div class="col-lg-6 col-lg-offset-1">
    <h1>Groupe list</h1>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Specialite</th>
                <th>Emploi</th>
                <th>Calendrier</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for groupe in groupes %}
            <tr>
                <td>{{ groupe.nom }}</td>
                <td>{{ groupe.specialite }}</td>
                <td>{{ groupe.emploi }}</td>
                <td>{{ groupe.cal }}</td>
                <td>
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path('groupe_show', { 'id': groupe.idgroupe }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('groupe_edit', { 'id': groupe.idgroupe }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-unstyled">
        <li>
            <a href="{{ path('groupe_new') }}">Create a new Group</a>
        </li>
    </ul>
    </div>
{% endblock %}
